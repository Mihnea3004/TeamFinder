<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Settings"
    android:background="@drawable/login_backgroud">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_text"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:text="@string/settings_header"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/settings_spinner"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:dropDownVerticalOffset="16dp"
        android:dropDownWidth="wrap_content"
        android:dropDownHorizontalOffset="16dp"
        android:verticalScrollbarPosition="right"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:dropDownSelector="@color/white"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="Enter your tag"
        android:textColor="@color/white"
        android:textColorHint="#38FF00"
        android:id="@+id/settings_tag"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/settings_server"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:dropDownVerticalOffset="16dp"
        android:dropDownWidth="wrap_content"
        android:dropDownHorizontalOffset="16dp"
        android:verticalScrollbarPosition="right"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:dropDownSelector="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_button"
        android:text="@string/save_button"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_margin="0dp" />
</LinearLayout>